/* components/song-item-v1/song-item-v1.wxss */
.song-item{
  display: flex;
  margin-bottom: 20rpx;
}
.song-item .cover{
  width: 140rpx;
  overflow: hidden;
  border-radius: 12rpx;
  margin-right: 20rpx;
}
.cover .image{
  width: 100%;
  vertical-align: middle;
}
.info{
  position: relative;
  display: flex;
  flex: 1;
  flex-direction: column;
  padding: 10rpx 0;
}
.info .name{
  font-size: 32rpx;
  color: #000;
  margin-bottom: 10rpx;
}
.info .artist{
  font-size: 24rpx;
  color: #888;
}
.info .arrow-icon{
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  color: #888;
  font-size: 24rpx;
}