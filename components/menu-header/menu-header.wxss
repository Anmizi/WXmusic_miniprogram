.menu-header{
  position: relative;
  height: 380rpx;
  overflow: hidden;
  padding: 20rpx;
  
}
.menu-header .background{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  filter: blur(30rpx);
}
.menu-header .top{
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: flex-start;
  margin: 20rpx;
}
.top .cover{
  width: 200rpx;
  overflow: hidden;
  border-radius: 20rpx;
  margin-right: 40rpx;
}

.top .info{
  flex: 1;
  overflow: hidden;
  color: #fff;
}
.top .info > .name{
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.info > .creator{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.creator > .nickname{
  font-size: 28rpx;
}
.creator .avatar{
  width: 52rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.info .desc{
  font-size: 28rpx;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-spacing: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.menu-header .bottom{
  position: relative;
  display: flex;
  margin-top: 40rpx;
}
.bottom  .icon{
  width: 48rpx;
  margin-right: 20rpx;
}
.bottom .like,.bottom .share{
  display: flex;
  flex: 1;
  flex-shrink: 0;
  justify-content: center;
  align-items: center;
  color: #fff;
}
.bottom .like > .count{
  font-size: 32rpx;
}
.bottom .share > .text{
  font-size: 32rpx;
}